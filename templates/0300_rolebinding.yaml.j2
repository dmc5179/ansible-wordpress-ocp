apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: wordpress
  namespace: wordpress
  labels:
    app: wordpress
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: wordpress
subjects:
- kind: ServiceAccount
  name: wordpress
  namespace: wordpress
userNames:
- system:serviceaccount:wordpress:wordpress
